<div class="large-12">
  <div class="text-center" id="forget-header">
    <h2>Forgot your password?</h2>
  </div>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= devise_error_messages! %>

    <div class="field large-4 large-offset-4 medium-4 medium-offset-4" id="forget-form">
      <%= f.label :email, "Please enter your email address" %>
      <%= f.email_field :email, autofocus: true %>
    </div>

    <div class="actions text-center">
      <%= f.submit "Send me reset password instructions", class: "button" %>
    </div>
  <% end %>
  <div class="text-center">
      <%= render "devise/shared/links" %>
  </div>
</div>
