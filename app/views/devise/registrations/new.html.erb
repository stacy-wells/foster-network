<div class="large-10 large-offset-1">
  <h2>Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <%= f.radio_button :rescue_group, true %>
      <%= f.label :rescue_group, "Rescue", value: true %>
      <%= f.radio_button :rescue_group, false %>
      <%= f.label :rescue_group, "Foster", value: false %>
    </div>

    <div class="field">
      <%= f.label :first_name, "First Name" %>
      <%= f.text_field :first_name, autofocus: true %>
    </div>

    <div class="field">
      <%= f.label :last_name, "Last Name" %>
      <%= f.text_field :last_name, autofocus: true %>
    </div>

    <div class="field">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true %>
    </div>

    <div class="field">
      <%= f.label :city %>
      <%= f.text_field :city, autofocus: true %>
    </div>

    <div class="field">
      <%= f.label :state %>
      <%= f.text_field :state, autofocus: true %>
    </div>

    <div class="field">
      <%= f.label :phone, "Phone Number" %>
      <%= f.text_field :phone, autofocus: true %>
    </div>

    <div class="field">
      <%= f.label :description, "Bio/Description" %>
      <%= f.text_field :description, autofocus: true %>
    </div>

    <div class="field">
      <%= f.label :password, "Password (8 characters minimum)" %>
      <%= f.password_field :password, autocomplete: "off" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, autocomplete: "off" %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up" %>

    </div>
  <% end %>
<%= render "devise/shared/links" %>
</div>
